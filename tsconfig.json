{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": ["dom", "es2021"],
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@backend/*": ["backend/*"],
      "@frontend/*": ["frontend/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}