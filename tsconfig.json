{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": ["dom", "es2021"],
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "jsx": "react-native",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@backend/*": ["backend/*"],
      "@frontend/*": ["frontend/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
